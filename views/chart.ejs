<!DOCTYPE html>

<html>

<!-- Head -->
<head>

    <!-- Page title-->
    <title><%= chartPageTitle %></title>

    <!-- Meta tags -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Open Graph -->
    <meta property="og:type" content="website">
    <meta property="og:title" content="Charts - Jake Gloudemans">
    <meta property="og:url" content="">
    <meta property="og:description" content="">
    <meta property="og:image" content="https://charts.jakegloudemans.com/static/img/card-image-waves.png">

    <!-- Twitter card -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:site" content="@partlygloudy">
    <meta name="twitter:creator" content="@partlygloudy">
    <meta name="twitter:title" content="Charts - Jake Gloudemans">
    <meta name="twitter:description" content="">
    <meta name="twitter:image" content="https://charts.jakegloudemans.com/static/img/card-image-waves.png">

    <!-- CSS stylesheet -->
    <link rel="stylesheet" href="/static/css/chart-web.css">
    <link rel="stylesheet" href="/static/css/chart/<%= chartStylesheet %>">

    <!-- External scripts (JQuery, D3.js) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.0/jquery.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/d3js/7.8.4/d3.min.js"></script>

    <!-- Custom scripts -->
    <script src="/static/js/chart-web.js"></script>
    <script src="/static/js/chart/<%= chartScript %>"></script>

    <!-- Load Google fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin="">
    <link href="https://fonts.googleapis.com/css2?family=Crimson+Text:ital,wght@0,400;0,700;1,400;1,700&amp;display=swap" rel="stylesheet">

</head>

<!-- Body -->
<body>

<div id="content-wrapper">

    <!-- Wrapper for all elements of the chart - header, body, and footer -->
    <div id="chart-wrapper">

        <!-- Row at the top of the chart, displays chart title -->
        <div id="chart-header">

            <div>
                <h1 id="chart-title"><%= chartTitle %></h1>
                <h2 id="chart-subtitle"><%= chartSubtitle %></h2>
            </div>

            <h2 id="chart-logo-text">Jake<br>Gloudemans</h2>


        </div>

        <!-- Chart body, generated with d3 in the browser -->
        <div id="chart-body">

        </div>

        <!-- Optional text description to accompany the chart -->
        <div id="chart-description"><%- chartDescription %></div>

        <!-- Footer - includes data sources, last update info, and licensing info -->
        <div id="chart-footer">
            <p id="chart-footer-data-source">Data Source: <%- chartDataSource %></p>
            <p id="chart-footer-last-update">Last Update: <%= chartLastUpdate %></p>
        </div>

    </div>

</div>

</body>

</html>
